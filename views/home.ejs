    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<section id="barHome" class="container mt-5">
    <div class="container">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm d-flex justify-content-center">
                <h3 class="text-center sectionHeader">
                    <i class="fas fa-glass-martini-alt mr-3"></i>Highlighted Bars
                </h3>
            </div>
            <div class="col-sm d-flex justify-content-center">
                <a href="/bars/new">
                    <button class="btn btn-success float-right">
                        <i class="fas fa-plus-circle mr-1"></i>Add Bar
                    </button>
                </a>
            </div>
        </div>
    </div>
    
    <div class="row">
        <% bars.forEach(function(bar){ %>
        <div class="col-md-6 col-lg-4 d-flex justify-content-center">
            <div class="card shadow border-0 mt-4" style="width: 22rem;">
                <a href="/bars/<%=bar.id%>">
                    <img src="<%=bar.image%>" class="card-img-top thumbnail" alt="Image"> 
                </a>
                <div class="card-body">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                        <a class="text-info" href="/bars/<%=bar.id%>">
                            <h5 class="card-title"><%= bar.name %></h5>
                        </a>
                        </li>
                        <li id="thumbnailPrice"class="list-inline-item float-right text-success">
                            <%= bar.price %>
                        </li>    
                    </ul>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>
       
<%- include("partials/footer") %>

