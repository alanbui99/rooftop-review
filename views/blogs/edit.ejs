<%- include("../partials/header") %>

<div id="startItem" class="container mt-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-10 col-md-9 col-lg-8">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h1 class="text-center">Edit <%= blog.title %></h1>
                    <p class="text-muted"><small>Fields marked * are required</small></p>
                    
                    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label>Title*</label>
                            <input type="text" class="form-control" name="blog[title]" value="<%=blog.title%>" required>
                        </div>
                        <div class="form-group">
                            <label>Image URL*</label>
                            <input type="text" class="form-control" name="blog[image]" value="<%=blog.image%>" required>
                        </div>
                        <div class="form-group">
                            <label>Blog Content*</label>
                            <textarea class="form-control" name="blog[body]" rows="8" required><%=blog.body%></textarea>
                        </div>
                        <button class="btn btn-info btn-block mb-2">Submit</button>
                    </form>
                    
                    <a href="/blogs/<%=blog.id%>" class="text-info">Go back</a>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>

<%- include("../partials/footer") %>